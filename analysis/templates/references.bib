@article{trierAutomatedMappingCultural2021a,
	title = {Automated mapping of cultural heritage in {Norway} from airborne lidar data using faster {R}-{CNN}},
	volume = {95},
	issn = {0303-2434},
	url = {https://www.sciencedirect.com/science/article/pii/S0303243420308849},
	doi = {10.1016/j.jag.2020.102241},
	abstract = {The existing cultural heritage mapping in Norway is incomplete. Some selected areas are mapped well, while the majority of areas only contain chance discoveries, often with bad positional accuracy. The goal of this research was to develop automated tools for improving the cultural heritage mapping in Norway, thus enabling detailed mapping of large areas within realistic budgets and time frames. The focus was on three types of cultural heritage that occur frequently in many types of Norwegian landscape: grave mounds, pitfall traps in deer hunting systems and charcoal kilns. A recent development in deep neural networks for object detection in natural images is the region-proposing convolutional neural network (R-CNN), which may also be used for cultural heritage detection in local relief model (LRM) visualizations of airborne laser scanning (ALS) data. Python code for ‘Simple Faster R-CNN’ was downloaded from Github. On 737 test images (16.6 km2) not seen during training, 87 \% of the true cultural heritage objects were correctly identified, while 24 \% of the predicted cultural heritage locations were false. However, all test images were small (150 m × 150 m) and contained at least one cultural heritage object, meaning that the false positive rate may be higher for an entire landscape. In Larvik municipality, Vestfold and Telemark County, on a 67 km2 area not seen during training, the R-CNN correctly identified 38 \% of the true grave mounds, with 89 \% false positives. On a 937 km2 area covering Øvre Eiker municipality, Viken County, the R-CNN correctly identified 90 \% of the charcoal kilns, with 38 \% false positives. In conclusion, we have demonstrated that Faster R-CNN is well suited for semi-automatic detection of cultural heritage objects such as charcoal kilns, grave mounds and pitfall traps in high resolution airborne lidar data. However, it is desirable to reduce the false positive rate in order to limit the amount of visual inspection needed when the method is applied to large areas for detailed archaeological mapping.},
	language = {en},
	urldate = {2021-09-28},
	journal = {International Journal of Applied Earth Observation and Geoinformation},
	author = {Trier, Øivind Due and Reksten, Jarle Hamar and Løseth, Kristian},
	month = mar,
	year = {2021},
	keywords = {Grave mounds, Deep learning, Artificial intelligence, Airborne laser scanning, Charcoal kilns, Deer hunting systems},
	pages = {102241},
}

@article{gholamrezaInvestigatingOLITIRS2021,
	title = {Investigating on {OLI} and {TIRS} data fusion methods in detection and identification of ancient hills (case study: {Farahan} area)},
	issn = {1866-928X},
	shorttitle = {Investigating on {OLI} and {TIRS} data fusion methods in detection and identification of ancient hills (case study},
	url = {https://doi.org/10.1007/s12518-021-00366-3},
	doi = {10.1007/s12518-021-00366-3},
	abstract = {Nowadays, remote sensing and satellite images are used instead of field operations required to identify cultural heritage and antiquities due to the capability of analysis of altitude, temperature, vegetation, moisture content, and soil type. On the other hand, remote sensing requires less cost and time compared to field operations and can provide more accurate results with more certainty. In this study, optical and thermal images of Landsat 8 were used in the winter and summer seasons in Farahan historical area in Iran. The data were fused with different methods of data fusion at the pixel level, and their results were compared with four validation methods. Among the used fusion methods, the Ehlers showed the best performance. All images were then fused with this method, and their results were entered into the next steps of the processes. In order to extract ancient structures and hills, their spectral and geometric properties were studied. Therefore, in order to investigate spectral properties of ancient hills, the effects of old structures on moisture content, clay content, lime content, greenness, and land surface temperature (LST) were studied. This led to the production of five information layers. These five layers were classified with unsupervised classification algorithms in different classes. Then, for distinguishing between ancient hills and other ancient structures, their salient geometric features “altitude anomaly” were studied. To do this, a map of the promising areas of the existence of ancient structures was integrated with the altitude anomalies map which is obtained from applying a range filter on a DEM with a resolution of 10 m. Finally, the ancient hills were extracted into three different categories, using the template matching algorithm, taking into account the correlation coefficient. The best value of the correlation coefficient that was used to detect the ancient hills in the first 10 identified cases of the first group was between 75 and 80\%. This value was 40\% for the second group of the ancient hills, which caused 80\% correct identification of the hills. Also, for third group of the ancient hills, it was between 30 and 35\% which caused 70\% correct identification of the ancient hills.},
	language = {en},
	urldate = {2021-09-28},
	journal = {Applied Geomatics},
	author = {GholamReza, Ali and Malian, Abbass},
	month = mar,
	year = {2021},
