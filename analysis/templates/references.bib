	author = {Casana, Jesse},
	month = aug,
	year = {2014},
	note = {Publisher: Cambridge University Press},
	pages = {222--233},
	file = {Snapshot:C\:\\Users\\kelto\\Zotero\\storage\\59QE6KBD\\53CC9DA6CAF6E1C8061BFC90DF27030D.html:text/html;Full Text PDF:C\:\\Users\\kelto\\Zotero\\storage\\RW7I5WMQ\\Casana - 2014 - Regional-Scale Archaeological Remote Sensing in th.pdf:application/pdf},
